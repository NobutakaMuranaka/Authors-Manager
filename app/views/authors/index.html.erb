<% provide(:title, '著者一覧') %>
<div class="container">
  <h1>著者一覧</h1>
  <p><%= link_to '新規追加', new_author_path, class: 'btn btn-primary' %></p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>名前</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.id %></td>
          <td><%= author.name %></td>
          <td><%= author.email %></td>
          <td><%= link_to '詳細', author %></td>
          <td><%= link_to '編集', edit_author_path(author) %></td>
          <td><%= link_to '削除', author, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>