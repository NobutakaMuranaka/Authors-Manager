<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@admin_user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class = 'form-group'>
        <%= f.label "名前" %>
        <%= f.text_field :name, class: 'form-control', id: 'author_name' %>
      </div>
      <div class = 'form-group'>
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, class: 'form-control', id: 'author_email' %>
      </div>
      <div class = 'form-group'>
        <%= f.label "説明" %>
        <%= f.text_field :introduction, class: 'form-control', id: 'author_introduction' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :sex %>
        <%= f.text_field :sex, class: 'form-control', id: 'user_sex' %>
      </div>
    <%= f.submit "更新する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>