<% provide(:title, "書籍登録") %>
<h1>書籍登録</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @book, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    　<div class = 'form-group'>
        <%= f.label "著者" %>
        <%= f.collection_select(:author_id, Author.all, :id, :name, {}, {class:"select-box", id:"mentor-skill"}) %>
      </div>
      <div class = 'form-group'>
        <%= f.label "書籍タイトル" %>
        <%= f.text_field :title, class: 'form-control', id: 'book_title' %>
      </div>
      <div class = 'form-group'>
        <%= f.label "出版日" %>
        <%= f.date_field :datetime, class: 'form-control', id: 'book_datetime' %>
      </div>
      <%= f.submit nil, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>