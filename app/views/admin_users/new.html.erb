<h1>ユーザー登録</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @admin_user, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class = 'form-group'>
        <%= f.label 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', id: 'admin_user_email' %>
      </div>
      <div class = 'form-group'>
        <%= f.label 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', id: 'admin_user_password' %>
      </div>
      <div class = 'form-group'>
        <%= f.label 'パスワード(確認)' %>
        <%= f.password_field :password_confirmation, class: 'form-control', id: 'admin_user_password_confirmation' %>
      </div>
      <%= f.submit nil, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

